{% if aObjectList  %}
    {% set useMainSection = 1 %}
    <div class="b-catrelated">
        {% if title %}<div class="b-title-h2">{{ title }}</div>{% endif %}
        {% if sTpl == 'gallery' %}
            <div class="b-catalogbox b-catalogbox-gal{{ Adaptive.write(' b-catalogbox-carousel') }}{% if show_shadows=='enabled' %} b-catalogbox-boxshadow{% endif %} js_goods_container">
                <div class="js-owl-carousel owl-carousel owl-carousel-relatedtheme"  data-carousel-options="{{ gallerySettings_recentlyViewed }}">
                    {% include "GalleryItems.twig" %}
                </div>
            </div>
        {% elseif sTpl == 'list' %}
            <div class="b-catalogbox b-catalogbox-list js_goods_container">
                {% include "ListItems.twig" %}
            </div>
        {% elseif sTpl == 'table' %}
            <div class="b-catalogbox b-catalogbox-table js_goods_container">
                {% include "TableItems.twig" %}
            </div>
        {% endif %}
    </div>
{% endif %}