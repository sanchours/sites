{% set sClassField = oField.settings.labelPosition %}
<div class="form__col-{{oField.getClassVal()}}">
<div class="form__item form__item--label-{{oField.settings.labelPosition}} {{ oField.settings.classModify }}">
        {% if (oField.settings.labelPosition != 'right') %}
            <div class="form__label">{{oField.settings.title}}{% if oField.settings.required==1 %} <ins class="form__mark">*</ins>{% endif %}</div>
        {% endif %}
        <div class="form__input form__input--select {%  if oField.getError() %} form__item--error {% endif %}">
            <select data-hash="{{ templateForm.formHash }}"
                    data-name="{{ oField.settings.title }}"
                    class="js-form-select"
                    id="{{ oField.settings.slug }}_{{ templateForm.formHash }}"
                    name="{{ oField.settings.slug }}" {{ oField.settings.specStyle }}
                    data-select-placeholder="{{ oField.settings.title }}" {{ oField.settings.specStyle }}>
                {% set aItems = oField.getViewItems() %}
                {% if 'placeholder' in oField.settings.specStyle or sClassField=='none' %}
                    <option></option>
                {% endif %}
                {% for aItem in aItems %}
                    <option value="{{aItem.value}}" {% if aItem.checked %} selected {% endif %}>{{aItem.title}}</option>
                {% endfor %}
            </select>
        </div>
        {% if (oField.settings.labelPosition == 'right') %}
            <div class="form__label">{{oField.settings.title}}{% if oField.settings.required==1 %} <ins class="form__mark">*</ins>{% endif %}</div>
        {% endif %}
    </div>
    {% if oField.settings.description!='' %}<div class="form__info">{{oField.settings.description}}</div>{% endif %}
</div>