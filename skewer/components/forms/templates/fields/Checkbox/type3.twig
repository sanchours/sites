{# fieldCheckbox3 #}
<!--Чекбоксы Слайд-->
<div class="form__col-{{oField.getClassVal()}}">
    <div class="form__item form__item--checkboxes form__item--label-{{ oField.settings.labelPosition }} {{ oField.settings.classModify }}">
        {% if (oField.settings.labelPosition != 'right') %}
            <div class="form__label">{{oField.settings.title}}{% if oField.settings.required==1 %} <ins class="form__mark">*</ins>{% endif %}</div>
        {% endif %}
        <div class="form__input-wrap">
            <div class="form__input form__input--checkbox-slide {%  if oField.getError() %} form__item--error {% endif %}">
                <input data-name="{{oField.settings.title}}" type="checkbox"
                       name="{{oField.settings.slug}}"
                       id="check-{{oField.settings.slug}}_{{templateForm.formHash}}"
                       {% if oField.value %} checked {% endif %}
                       {{oField.settings.specStyle}}
                >
                <div class="form__checkbox js-checkbox">
                    <label class="form__checkbox-trigger" for="check-{{oField.settings.slug}}_{{templateForm.formHash}}">
                        <span class="js-handle-checkbox" for="check-{{oField.settings.slug}}_{{templateForm.formHash}}"></span>
                    </label>
                </div>
                <label class="form__checkbox-label js-checkbox-label" for="check-{{oField.settings.slug}}_{{templateForm.formHash}}">{{oField.settings.title}}</label>
                {#<div class="form__icon fa"></div>#}
            </div>
        </div>
        {% if (oField.settings.labelPosition == 'right') %}
            <div class="form__label">{{oField.settings.title}}{% if oField.settings.required==1 %} <ins class="form__mark">*</ins>{% endif %}</div>
        {% endif %}
        {% if oField.settings.description!='' %}<div class="form__info">{{oField.settings.description}}</div>{% endif %}
    </div>
</div>